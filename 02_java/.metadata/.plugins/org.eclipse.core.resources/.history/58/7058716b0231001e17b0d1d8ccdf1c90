package java_study_chap_05;

import java.util.Scanner;

public class ArrayExample04 {

	static void getNumber(int[] inpVal) {
		Scanner data = new Scanner(System.in);

		for (int i = 0; i <= inpVal.length - 1; i++) {
			System.out.print("정수 >>");
			inpVal[i] = data.nextInt();
		}
	}

	static void showNumber(int[] data)

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int[] inpVal = new int[5];

		getNumber(inpVal);

		for (int a : inpVal) {
			System.out.print(a + "");
		}
		System.out.println();

		int sum = 0;
		for (int x : inpVal) {
			sum += x;
		}

		System.out.println("전체합계: " + sum);
		double aver = (double) sum / inpVal.length;
		System.out.println("전체평균:" + aver);
	}

}