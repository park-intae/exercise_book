package java_study_chap_05;

import java.util.Scanner;

public class ArratUtil {

	static void getNumbers(String inputTitle, int[] data) {
		Scanner sc = new Scanner(System.in);

		for (int i = 0; i <= data.length - 1; i++) {
			System.out.print(inputTitle);
			data[i] = sc.nextInt();
		}
	}

	static void showNumbers(int[] data) {
		for (int a : data) {
			System.out.print(a + "");
		}
		System.out.println();
	}

	static int addAll(int[] data) {
		int sum = 0;
		for (int x : data) {
			sum += x;
		}
		return sum;
	}
	
	static int findMax(int[] data) {
		int max = data[0];
		int maxIx = 0;
		for (int i = 0; i < data.length; i++) {
			if (max < data[i]) {
				max = data[i];
				maxIx = i;
			}
		}
		return maxIx;

	}

	static int findMin(int[] data) {
		int min = data[0];
		int minIx = 0;
		for (int i = 0; i < data.length; i++) {
			if (min > data[i]) {
				min = data[i];
				minIx = i;
			}
		}
		return minIx;
	}

}
