package java_study_chap_05;

import java.util.Scanner;

import java_study_chap_04.double_loof;
import java_study_chap_04.for_sentence;

public class ArrayExample04 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] inpVal = new int[5];
		
		for(int i = 0; i <= inpVal.length; i++) {
			Scanner data = new Scanner(System.input);
			inpVal = data.nextInt();
		}
		
		for(int a : inpVal) {
			System.out.print(a," ");
		}
		System.out.println();
		
		int sum = 0;
		for(int x : inpVal) {
			sum += x;
		}
		System.out.println("전체합계: " + sum);
		double aver = (double) sum / inpVal.length;
		System.out.println("전체평균:" + aver);
	}

}
